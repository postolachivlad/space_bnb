<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "Logo.svg", class: "logo" %>
  <% end %>

  <div class="navbar-position">
        <%= form_tag spaceships_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-box search-form-styles",
        placeholder: "Search in the galaxy..."
      %>
    <% end %>
  </div>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
          <li class="avatar">
            <%= link_to user_path(current_user) do %>
              <%= cl_image_tag (current_user.photo), class: "avatar avatar-bordered" %>
            <% end %>
          </li>
      <% else %>
        <li>
          <%= link_to('Login', new_user_session_path, class: "button") %>
        </li>
        <li>
          <%= link_to('Sign-up', new_user_registration_path, class: "button") %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
