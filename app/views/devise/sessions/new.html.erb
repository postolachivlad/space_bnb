<div class="sign_in_container">
  <h1 class="sign_in_h1">Log in</h2>
  <div class="section">
    <h2>Enter your log-in information</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, placeholder: "Email" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" }, placeholder: "Password" %>
          <div class="moving-log-in-btn">
            <div class="display-flex-remember-user">
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
              <p>Remember me</p>
            </div>
            <%=%>

            <div class="form-actions">
            <%= f.button :submit, "Log in" , class: "form-button"%>
            </div>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
