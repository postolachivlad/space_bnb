<div class="sign_in_container">
  <h1 class="sign_in_h1">Forgot your password?</h1>
  <div class="section">
    <h2>Please fill the form to restore your password</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" }, placeholder: "Enter your email" %>
      </div>

      <div class="moving-log-in-btn">
        <div>
          <%= render "devise/shared/links" %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: "form-button" %>
        </div>
      <% end %>
      </div>
  </div>
</div>
