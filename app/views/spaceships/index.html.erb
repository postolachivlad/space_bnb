<div class="navbar-buffer"></div>
<div class="home-container">
  <h1>Find the perfect spaceship</h1>
  <div class="ships-grid" style="display: flex;">
    <!-- check if user is coming from "search bar" or from button "I need a spaceship"-->
    <% unless request.fullpath == "/spaceships" %>
      <% @search_ships.each do |ship| %>
        <%= link_to spaceship_path(ship) do %>
          <div class="card">
            <p class="card-title"><%= ship.name %></p>
            <%= cl_image_tag (ship.photo), class: "spaceship-photo" %>
            <div class="card-infos">
              <p><%=ship.region %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <% @ships.each do |ship| %>
        <%= link_to spaceship_path(ship) do %>
          <div class="card">
            <p class="card-title"><%= ship.name %></p>
            <%= cl_image_tag (ship.photo), class: "spaceship-photo" %>
            <div class="card-infos">
              <p><%=ship.region %></p>
            </div>
          </div>
        <%end%>
      <% end %>
    <% end %>
  </div>


  <div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
  ></div>

</div>



